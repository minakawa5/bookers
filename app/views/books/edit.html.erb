<body>
<h1>Edit Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |book| %>

<div class="field">
  <P>title</P>
  <%= book.text_field :title %>
</div>  
 
<div class="field"> 
  <P>body</P>
  <%= book.text_area :body %>
</div>
  
  <div class=actions><%= book.submit 'Update Book' %></div>
  
  <a class="show"><%= link_to "Show", book_path(@book.id) %></a>
  |
  <a class="back"><%= link_to "Back", books_path(@book.id) %></a>
  
<% end %>
</body>