<h1>Books</h1>
<table>
  <% @books.each do |book| %>

 <tr>
   <th>Title</th><th>Body</th>
 </tr>
 
 <tr>
   
   <td><span><%= book.title %></span></td>
   <td><span><%= book.body %></span></td>
    
   <td>
     <a class="show"><%= link_to "Show", book_path(book.id) %></a></td>
   <td>
     <a class="edit"><%= link_to "Edit", edit_book_path(book.id) %></a></td>
   <td>
     <a class="dele"><%= link_to "Delete", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></a></td>
   
 </tr>
<% end %>
</table>

<h2>New Book</h2>

<%= form_with model: @book, url: books_path do |f| %>
  <div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
	
	<div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
	</div>
	
	<div class="actions">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>